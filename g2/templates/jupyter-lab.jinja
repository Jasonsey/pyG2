<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <title>{{ plot.page_title }}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body, div.pyg2-plot-container {
            height: 100%;
            overflow: hidden;
        }
    </style>
</head>
<body>
<div id="{{ plot.plot_id }}" class="pyg2-plot-container"></div>
<script>
    // load javascript
    new Promise(function (resolve, reject) {
        const script = document.createElement("script");
        script.onload = resolve;
        script.onerror = reject;
        script.src = "https://unpkg.com/@antv/g2@5";
        document.head.appendChild(script);
    }).then(() => {
        const chart_{{ plot.plot_id }} = new Chart(
            {container: '{{ plot.plot_id }}'}
        )
        chart_{{ plot.plot_id }}.options({{ plot.js_options }})
        chart_{{ plot.plot_id }}.render()
    });
</script>
</body>
</html>